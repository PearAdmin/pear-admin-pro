<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pearadmin.pro.modules.sys.repository.SysPowerRepository">

    <resultMap id="SysPowerTree" type="SysPower">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <result property="path" column="path"></result>
        <result property="type" column="type"></result>
        <result property="icon" column="icon"></result>
        <result property="title" column="title"></result>
        <result property="sort" column="sort"></result>
        <result property="link" column="link"></result>
        <result property="enable" column="enable"></result>
        <result property="i18n" column="i18n"></result>
        <result property="parent" column="parent"></result>
        <collection property="children" select="selectChildren" column="id"></collection>
    </resultMap>

    <select id="selectTree" resultMap="SysPowerTree">
        select * from sys_power where parent = 0;
    </select>

    <select id="selectChildren" resultType="SysPower">
        select * from sys_power where parent = #{parent}
    </select>

    <resultMap id="SysUserPowerTree" type="SysPower">
        <result property="id" column="id"></result>
        <result property="name" column="name"></result>
        <result property="path" column="path"></result>
        <result property="type" column="type"></result>
        <result property="icon" column="icon"></result>
        <result property="title" column="title"></result>
        <result property="sort" column="sort"></result>
        <result property="link" column="link"></result>
        <result property="enable" column="enable"></result>
        <result property="i18n" column="i18n"></result>
        <result property="parent" column="parent"></result>
        <collection property="children" select="selectChildrenByUserId" column="{userId=userId,parent=id}"></collection>
    </resultMap>

    <select id="selectTreeByUserId" resultMap="SysUserPowerTree">
        select * from sys_power sp
        left join sys_role_power srp on srp.power_id = sp.id
        left join sys_role sr on sr.id = srp.role_id
        left join sys_user_role sur on sur.role_id = sr.id
        where sp.parent = 0 and sp.enable = 1
        and sur.user_id = #{userId}
    </select>

    <select id="selectChildrenByUserId" resultType="SysPower">
        select * from sys_power sp
        left join sys_role_power srp on srp.power_id = sp.id
        left join sys_role sr on sr.id = srp.role_id
        left join sys_user_role sur on sur.role_id = sr.id
        where sp.parent = #{parent} and sur.user_id = #{userId}
        and sp.enable = 1
    </select>

    <select id="selectList" resultType="SysPower">
        select * from sys_power
    </select>

    <select id="selectListByUserId" parameterType="string" resultType="SysPower">
        select * from sys_power sp
        left join sys_role_power srp on srp.power_id = sp.id
        left join sys_role sr on sr.id = srp.role_id
        left join sys_user_role sur on sur.role_id = sr.id
        where sur.user_id = #{userId}
    </select>

</mapper>