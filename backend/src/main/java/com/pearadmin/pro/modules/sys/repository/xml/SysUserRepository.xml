<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pearadmin.pro.modules.sys.repository.SysUserRepository">

    <select id="selectList" parameterType="SysUserRequest" resultType="SysUser">
        select * from sys_user
        <where>
            <if test="request.username!=null and request.username!=''">
                sr.username like concat('%', #{request.username}, '%')
            </if>
            <if test="request.nickname!=null and request.nickname!=''">
                sr.nickname like concat('%', #{request.nickname}, '%')
            </if>
        </where>
    </select>

</mapper>